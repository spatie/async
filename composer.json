{
    "name": "spatie/async",
    "description": "Asynchronous and parallel PHP with the PCNTL extension",
    "keywords": [
        "spatie",
        "async"
    ],
    "homepage": "https://github.com/spatie/async",
    "license": "MIT",
    "authors": [
        {
            "name": "Brent Roose",
            "email": "brent@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/serializable-closure": "^1.3.7|^2.0.0",
        "symfony/process": "^7.2"
    },
    "require-dev": {
        "larapack/dd": "^1.1",
        "phpunit/phpunit": "^11.0",
        "symfony/stopwatch": "^7.2"
    },
    "suggest": {
        "ext-pcntl": "Required to use async processes",
        "ext-posix": "Required to use async processes"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Spatie\\Async\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Async\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
